        </select>
          <p ng-cloak class="ng-cloak help-block" ng-show="submitted && resumeForm.paymentType.$error.required" >Resume payment Type is required.</p>
      </div>

      <!-- Min payment -->
      <div class="form" ng-if="resume.paymentType != 'Negotiable' && resume.paymentType != null">
        <h5>Payment (NGN) <span style="color: #EF6C00;">*</span></h5>
        <input type="number" ng-click="clear()" name="payment" placeholder="Enter amount in NGN" ng-model="resume.payment" required>
        <p ng-cloak class="ng-cloak help-block" ng-show="submitted && resumeForm.payment.$invalid" >Enter a valid amount.</p>
        <span ng-hide="submitted && resumeForm.payment.$invalid" >{{resume.payment | currency:"":0}} NGN</span>
      </div>

    </div>
  </div>

  <div class="eight columns">
    <div class="submit-page">
        

      <!-- Description -->
      <div>
        <h5>About Me / Professional Summary  <span style="color: #EF6C00;">*</span></h5>
        <wysiwyg-edit  ng-click="clear()" content="resume.aboutMe" config="editorConfig"></wysiwyg-edit>
      </div>

    </div>
  </div>

  <div class="sixteen columns">
    <div class="submit-page">
         <!-- Education -->
      <div class="form with-line">
        <h5>Education <span style="color: #8BC34A;">(optional)</span></h5>
        <div class="form-inside">

          <!-- Add Education -->
          <div data-ng-repeat="education in educations" class="form boxed education-box">
            <a href="" ng-click="removeEducation(educations.indexOf(education))" class="close-form  button"><i class="fa fa-close"></i></a>
            <div>
              <h5>School Name <span style="color: #EF6C00;">*</span></h5>
              <input class="search-field" name="sch_{{$index}}" type="text" placeholder="School Name (required)" ng-click="clear()" ng-model="education.name" required/>
              <p ng-cloak class="ng-cloak help-block" ng-show="submitted && resumeForm['sch_' + $index].$invalid" >Enter school name</p>
            </div>
            <div>
              <h5>Qualification <span style="color: #EF6C00;">*</span></h5>
              <input  class="search-field" name="qua_{{$index}}"  type="text" placeholder="Qualification (required)" ng-click="clear()" ng-model="education.qualification" required/>
              <p ng-cloak class="ng-cloak help-block" ng-show="submitted && resumeForm['qua_' + $index].$invalid" >Enter qualification</p>
            </div>
            <div>
              <h5>Start date <span style="color: #EF6C00;">*</span></h5>
              <select  chosen="{width: '100%'}" ng-click="clear()" name="start_{{$index}}" ng-model="education.start" required>
                 <option value="">Select Year</option>
                 <%for (var year in years){%>
                 <option ng-repeat="year in years" value="<%= years[year] %>"><%= years[year] %></option>
                 <%}%>
              </select>
              <p ng-cloak class="ng-cloak help-block" ng-show="submitted && resumeForm['start_' + $index].$invalid" >Select start date</p>
            </div>
            <div>
              <h5>End date <span style="color: #EF6C00;">*</span></h5>
              <select  chosen="{width: '100%'}" ng-click="clear()" name="end_{{$index}}"  ng-model="education.end" required>
                 <option value="">Select Year</option>
                 <%for (var year in years){%>
                 <option ng-repeat="year in years" value="<%= years[year] %>"><%= years[year] %></option>
                 <%}%>
              </select>
              <p ng-cloak class="ng-cloak help-block" ng-show="submitted && resumeForm['end_' + $index].$invalid" >Select end date</p>
            </div>
            <div>
              <h5>Notes</h5>
              <textarea style="margin-bottom: 0px; margin-top: 10px;" name="desc" id="desc" cols="30" rows="10" placeholder="Notes (optional)" ng-model="education.note" ></textarea>
            </div>
          </div>

          <a href="" class="button gray" ng-click="addNewEducation()"><i class="fa fa-plus-circle"></i> Add Education</a>
          
        </div>
      </div>


      <!-- Experience  -->
      <div class="form with-line">
        <h5>Experience <span style="color: #8BC34A;">(optional)</span></h5>
        <div class="form-inside">

          <!-- Add Experience -->
          <div data-ng-repeat="experience in experiences" class="form boxed experience-box">
            <a href="" ng-click="removeExperience(experiences.indexOf(experience))"  class="close-form button"><i class="fa fa-close"></i></a>
           <div>
            <h5>Employer Name <span style="color: #EF6C00;">*</span></h5>
            <input class="search-field" type="text" placeholder="Employer (required)"  name="emp_{{$index}}" ng-click="clear()" ng-model="experience.employer" required/>
            <p ng-cloak class="ng-cloak help-block" ng-show="submitted && resumeForm['emp_' + $index].$invalid" >Enter Employer name</p>
          </div>
          <div>
            <h5>Job Title <span style="color: #EF6C00;">*</span></h5>
            <input class="search-field" type="text" placeholder="Job Title (required)" name="job_{{$index}}" ng-click="clear()" ng-model="experience.jobTitle" required/>
            <p ng-cloak class="ng-cloak help-block" ng-show="submitted && resumeForm['job_' + $index].$invalid" >Enter job title</p>
          </div>
           <div>
              <h5>Start date <span style="color: #EF6C00;">*</span></h5>
              <select  chosen="{width: '100%'}" ng-click="clear()" name="estart_{{$index}}" ng-model="experience.start" required>
                 <option value="">Select Year</option>
                 <%for (var year in years){%>
                 <option ng-repeat="year in years" value="<%= years[year] %>"><%= years[year] %></option>
                 <%}%>
              </select>
              <p ng-cloak class="ng-cloak help-block" ng-show="submitted && resumeForm['estart_' + $index].$invalid" >Select start date</p>
            </div>
            <div>
              <h5>End date <span style="color: #EF6C00;">*</span></h5>
              <select  chosen="{width: '100%'}" ng-click="clear()" name="eend_{{$index}}"  ng-model="experience.end" required>
                 <option value="">Select Year</option>
                 <%for (var year in years){%>
                 <option ng-repeat="year in years" value="<%= years[year] %>"><%= years[year] %></option>
                 <%}%>
              </select>
              <p ng-cloak class="ng-cloak help-block" ng-show="submitted && resumeForm['eend_' + $index].$invalid" >Select end date</p>
            </div>
           <div>
            <h5>Notes</h5>
            <textarea name="desc1" id="desc1" cols="30" rows="10" placeholder="Notes (optional)" ng-model="experience.note"></textarea>
          </div>
          </div>

          <a href="" class="button gray"  ng-click="addNewExperience()"><i class="fa fa-plus-circle"></i> Add Experience</a>

        </div>
      </div>


      <div class="divider margin-top-0 padding-reset"></div>
      <button type="Submit" ng-cloak class="button ng-cloak  big margin-top-5">{{btn}}  <i class="fa fa-arrow-circle-right"></i>
      </button>

       <span ng-cloak class="error ng-cloak" ng-show="formError"> <i class="fa fa-warning"></i>  {{formError}}</span>
      <span ng-cloak class="success ng-cloak" ng-show="formSuccess">  {{formSuccess}}</span>

    </div>
  </div>

</form>

</div>

